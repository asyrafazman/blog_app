<% set_meta_tags_for_post(@post) %>

<!-- Structured Data for the Post -->
<script type="application/ld+json">
  <%= raw structured_data_for_post(@post).to_json %>
</script>

<article class="max-w-4xl mx-auto" itemscope itemtype="https://schema.org/BlogPosting">
  <!-- Featured Image -->
  <% if @post.featured_image.attached? %>
    <div class="mb-8 rounded-lg overflow-hidden shadow-lg">
      <%= image_tag @post.featured_image, 
          alt: @post.title,
          class: "w-full h-96 object-cover",
          itemprop: "image" %>
    </div>
  <% end %>
  
  <!-- Post Header -->
  <div class="bg-white rounded-lg shadow-md p-8 mb-8">
    <!-- Post Title -->
    <h1 class="text-4xl font-bold text-gray-900 mb-4" itemprop="headline">
      <%= @post.title %>
    </h1>
    
    <!-- Post Meta -->
    <div class="flex items-center justify-between mb-6 pb-6 border-b">
      <div class="flex items-center text-gray-600">
        <div class="w-10 h-10 bg-indigo-600 rounded-full flex items-center justify-center text-white font-bold mr-3">
          <%= @post.user.display_name[0].upcase %>
        </div>
        <div itemprop="author" itemscope itemtype="https://schema.org/Person">
          <p class="font-medium text-gray-900">
            <span itemprop="name"><%= @post.user.display_name %></span>
          </p>
          <p class="text-sm text-gray-500">
            <time datetime="<%= @post.published_at&.iso8601 %>" itemprop="datePublished">
              <%= @post.published_at&.strftime("%B %d, %Y") if @post.published_at %>
            </time>
            <meta itemprop="dateModified" content="<%= @post.updated_at.iso8601 %>">
          </p>
        </div>
      </div>
      
      <!-- Edit/Delete Actions (only for post owner) -->
      <% if user_signed_in? && @post.user == current_user %>
        <div class="flex space-x-2">
          <%= link_to "Edit", edit_post_path(@post), class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition" %>
          <%= button_to "Delete", @post, method: :delete, 
              data: { turbo_confirm: "Are you sure you want to delete this post?" },
              class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition" %>
        </div>
      <% end %>
    </div>
    
    <!-- Post Content -->
    <div class="prose prose-lg max-w-none" itemprop="articleBody">
      <%= @post.content %>
    </div>
    
    <!-- Publisher info for SEO -->
    <div itemprop="publisher" itemscope itemtype="https://schema.org/Organization" style="display: none;">
      <meta itemprop="name" content="BlogApp">
      <div itemprop="logo" itemscope itemtype="https://schema.org/ImageObject">
        <meta itemprop="url" content="<%= image_url('logo.png') %>">
      </div>
    </div>
  </div>
  
  <!-- Comments Section -->
  <div class="bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">
      Comments (<span itemprop="commentCount"><%= @comments.count %></span>)
    </h2>
    
    <!-- Comment Form (only for logged-in users) -->
    <% if user_signed_in? %>
      <div class="mb-8 pb-8 border-b">
        <%= form_with model: [@post, @comment], class: "space-y-4" do |f| %>
          <div>
            <%= f.label :body, "Add a comment", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :body, 
                rows: 4,
                placeholder: "Share your thoughts...",
                class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500",
                'aria-label': 'Comment text' %>
          </div>
          
          <%= f.submit "Post Comment", class: "px-6 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition cursor-pointer" %>
        <% end %>
      </div>
    <% else %>
      <div class="mb-8 pb-8 border-b bg-gray-50 p-4 rounded-lg text-center">
        <p class="text-gray-600 mb-2">Please sign in to leave a comment</p>
        <%= link_to "Sign In", new_user_session_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
      </div>
    <% end %>
    
    <!-- Comments List -->
    <% if @comments.any? %>
      <div class="space-y-6" itemprop="comment" itemscope itemtype="https://schema.org/Comment">
        <% @comments.each do |comment| %>
          <div class="border-b pb-6 last:border-b-0">
            <div class="flex justify-between items-start mb-3">
              <div class="flex items-center">
                <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center text-gray-700 font-bold mr-3">
                  <%= comment.user.display_name[0].upcase %>
                </div>
                <div>
                  <p class="font-medium text-gray-900"><%= comment.user.display_name %></p>
                  <p class="text-sm text-gray-500">
                    <time datetime="<%= comment.created_at.iso8601 %>">
                      <%= time_ago_in_words(comment.created_at) %> ago
                    </time>
                  </p>
                </div>
              </div>
              
              <!-- Delete button (only for comment owner) -->
              <% if user_signed_in? && comment.user == current_user %>
                <%= button_to "Delete", comment_path(comment), 
                    method: :delete,
                    data: { turbo_confirm: "Are you sure you want to delete this comment?" },
                    class: "text-red-600 hover:text-red-800 text-sm" %>
              <% end %>
            </div>
            
            <p class="text-gray-700 ml-11"><%= comment.body %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No comments yet. Be the first to comment!</p>
    <% end %>
  </div>
  
  <!-- Back Link -->
  <div class="mt-8">
    <%= link_to posts_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" do %>
      ‚Üê Back to all posts
    <% end %>
  </div>
</article>

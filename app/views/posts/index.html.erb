<% set_meta_tags_for_index(query: params[:query]) %>

<div class="max-w-7xl mx-auto">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900">Blog Posts</h1>
    <% if params[:query].present? %>
      <p class="text-gray-600 mt-2">Search results for: "<%= params[:query] %>"</p>
    <% end %>
  </div>

  <% if @posts.any? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-6">
      <% @posts.each do |post| %>
        <%= link_to post, class: "group", itemscope: true, itemtype: "https://schema.org/BlogPosting" do %>
          <article class="bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden h-full flex flex-col">
            <!-- Image -->
            <div class="relative h-48 bg-gray-200">
              <% if post.featured_image.attached? %>
                <%= image_tag post.featured_image, 
                    alt: post.title,
                    class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300",
                    itemprop: "image" %>
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center">
                  <svg class="w-12 h-12 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                  </svg>
                </div>
              <% end %>
            </div>

            <!-- Content -->
            <div class="p-5 flex flex-col flex-grow">
              <h2 class="text-xl font-semibold text-gray-900 mb-2 line-clamp-2 group-hover:text-indigo-600 transition-colors" itemprop="headline">
                <%= post.title %>
              </h2>
              
              <div class="flex items-center text-sm text-gray-500 mb-3 space-x-2">
                <span class="font-medium" itemprop="author" itemscope itemtype="https://schema.org/Person">
                  <span itemprop="name"><%= post.user.display_name %></span>
                </span>
                <span>•</span>
                <time datetime="<%= post.published_at&.iso8601 %>" itemprop="datePublished">
                  <%= post.published_at&.strftime("%b %d, %Y") %>
                </time>
              </div>
              
              <p class="text-gray-600 text-sm mb-4 line-clamp-3 flex-grow" itemprop="description">
                <%= post.excerpt(120) %>
              </p>
              
              <div class="flex items-center justify-between text-sm pt-4 border-t mt-auto">
                <span class="text-gray-500 flex items-center">
                  <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                  </svg>
                  <span itemprop="commentCount"><%= post.comments.count %></span>
                </span>
                
                <span class="text-indigo-600 font-medium group-hover:translate-x-1 transition-transform inline-block">
                  Read more →
                </span>
              </div>
            </div>
          </article>
        <% end %>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="mt-12 flex justify-center">
      <%= paginate @posts %>
    </div>

  <% else %>
    <!-- Empty State -->
    <div class="text-center py-16">
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-gray-100 mb-4">
        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
      </div>
      
      <% if params[:query].present? %>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">No posts found</h2>
        <p class="text-gray-600 mb-6">Try searching with different keywords</p>
        <%= link_to "Clear search", posts_path, class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
      <% else %>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">No posts yet</h2>
        <p class="text-gray-600 mb-6">Be the first to share your thoughts</p>
        <% if user_signed_in? %>
          <%= link_to "Create Post", new_post_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition shadow-md" %>
        <% else %>
          <%= link_to "Sign In to Create Post", new_user_session_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition shadow-md" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
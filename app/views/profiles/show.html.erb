<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-gray-900">My Profile</h1>
      <%= link_to "Edit Profile", profile_edit_path, class: "px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition" %>
    </div>
    
    <!-- Profile Information -->
    <div class="space-y-6">
      <!-- Avatar Placeholder -->
      <div class="flex items-center">
        <div class="w-24 h-24 bg-indigo-600 rounded-full flex items-center justify-center text-white text-4xl font-bold">
          <%= @user.display_name[0].upcase %>
        </div>
        <div class="ml-6">
          <h2 class="text-2xl font-bold text-gray-900"><%= @user.name %></h2>
          <p class="text-gray-600"><%= @user.email %></p>
        </div>
      </div>
      
      <!-- Stats -->
      <div class="grid grid-cols-2 gap-4 pt-6 border-t">
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-3xl font-bold text-indigo-600"><%= @user.posts.count %></p>
          <p class="text-gray-600">Total Posts</p>
        </div>
        <div class="bg-gray-50 p-4 rounded-lg">
          <p class="text-3xl font-bold text-indigo-600"><%= @user.comments.count %></p>
          <p class="text-gray-600">Total Comments</p>
        </div>
      </div>
      
      <!-- Recent Posts -->
      <div class="pt-6 border-t">
        <h3 class="text-xl font-bold text-gray-900 mb-4">My Recent Posts</h3>
        <% if @user.posts.recent.limit(5).any? %>
          <div class="space-y-3">
            <% @user.posts.recent.limit(5).each do |post| %>
              <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
                <div>
                  <%= link_to post.title, post, class: "font-medium text-gray-900 hover:text-indigo-600" %>
                  <p class="text-sm text-gray-500">
                    <%= post.published_at.strftime("%B %d, %Y") if post.published_at %> • 
                    <%= pluralize(post.comments.count, 'comment') %>
                  </p>
                </div>
                <div class="flex space-x-2">
                  <%= link_to "Edit", edit_post_path(post), class: "text-blue-600 hover:text-blue-800 text-sm" %>
                  <%= button_to "Delete", post, method: :delete,
                      data: { turbo_confirm: "Are you sure?" },
                      class: "text-red-600 hover:text-red-800 text-sm" %>
                </div>
              </div>
            <% end %>
          </div>
          
          <% if @user.posts.count > 5 %>
            <p class="text-center mt-4">
              <%= link_to "View all posts →", posts_path, class: "text-indigo-600 hover:text-indigo-800" %>
            </p>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-center py-8">You haven't created any posts yet.</p>
          <%= link_to "Create your first post", new_post_path, class: "block text-center px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

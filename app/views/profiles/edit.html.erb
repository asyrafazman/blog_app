

<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Profile</h1>
    
    <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-6" do |f| %>
      <!-- Error Messages -->
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg">
          <h3 class="font-bold mb-2"><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h3>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <!-- Name Field -->
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.text_field :name,
            placeholder: "Enter your name",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>
      
      <!-- Email Field -->
      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= f.email_field :email,
            placeholder: "Enter your email",
            class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        <p class="text-sm text-gray-500 mt-1">You'll need to confirm your new email address</p>
      </div>
      
      <!-- Submit Button -->
      <div>
        <%= f.submit "Update Profile", class: "w-full px-6 py-3 bg-indigo-600 text-white font-medium rounded-lg hover:bg-indigo-700 transition cursor-pointer" %>
      </div>
    <% end %>
    
    <!-- Change Password Link -->
    <div class="mt-6 pt-6 border-t">
      <h3 class="text-lg font-bold text-gray-900 mb-2">Change Password</h3>
      <p class="text-gray-600 mb-4">Want to change your password?</p>
      <%= link_to "Change Password", edit_user_registration_path, class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>
    
    <!-- Cancel Link -->
    <div class="mt-6">
      <%= link_to "â† Back to Profile", profile_path, class: "text-gray-600 hover:text-gray-800" %>
    </div>
  </div>
</div>
